# OpenAI Configuration
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE
OPENAI_BASE=https://api.openai.com
AGENT_MODEL=gpt-4o
AGENT_MODEL_TTS=gpt-4o-tts
REALTIME_MODEL=gpt-4o-realtime-preview

# Voice Settings
SIRA_TTS_VOICE=marin
SIRA_REALTIME_VOICE=marin

# Redis Configuration
REDIS_URL=redis://default:YOUR_PASSWORD@redis-sira:6379

# Qdrant Configuration (optional)
QDRANT_URL=http://qdrant:6333

# FastAPI Tool Layer (replaces n8n)
N8N_TASK_URL=http://sira_api_v3:8791/webhook/sira3-tasks-create

# Twilio Phone Integration (optional)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+41XXXXXXXXX
SIRA_PHONE_ENABLED=false
SIRA_PHONE_OWNER_NAME=Your Name

# Memory Settings
SIRA_MEM_AUTOSAVE=1
SIRA_MEM_MAX=12000

# User Profile
SIRA_PRIVATE_EMAIL=your-private@email.com
SIRA_WORK_EMAIL=your-work@email.com

# App Settings
SIRA_APP_NAME=Sira-Voice
SIRA_ICON_URL=https://your-domain.com/icon.png
SIRA_TOKEN=your-secure-token

# CORS (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com

# System Instructions
SIRA_INSTRUCTIONS=Ich bin Sira, deine virtuelle KI-Assistentin...

# Server
PORT=8787
NODE_OPTIONS=--dns-result-order=ipv4first
